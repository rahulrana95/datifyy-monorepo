# Datifyy Frontend Environment Variables

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:8000/api

# Feature Flags
# Set to 'true' or 'false' to override default feature flags
REACT_APP_USE_MOCK_DATA=true
REACT_APP_ENABLE_ADMIN_DASHBOARD=true
REACT_APP_ENABLE_CURATE_DATES=true
REACT_APP_ENABLE_REVENUE_TRACKING=true

# Google Analytics
REACT_APP_GA_ID=

# Sentry Error Tracking
REACT_APP_SENTRY_DSN=

# Other Environment Variables
REACT_APP_IS_COUNTDOWN_ENABLED=false